{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2017",
    "declaration": true,
    "moduleResolution": "node",
    "strict": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "lib": [
      "es2017",
      "dom",
      "es5"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts"
  ]
}